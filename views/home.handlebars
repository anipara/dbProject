        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email">
    </div>
    <div class="form-group">
        <label for="job">Occupation</label>
        <input type="text" class="form-control" id="job" name="job">
    </div>
    <div class="btn-toolbar">
        <div class="btn-group mr-4">
            <button type="submit" formaction="/createdb" class="btn btn-secondary">Create DB</button>
            <button type="submit" formaction="/deletedb" class="btn btn-secondary">Delete DB</button>
            <button type="submit" formaction="/cleartable" class="btn btn-secondary">Clear Table</button>
        </div>
        <div class="btn-group">
            <button type="submit" formaction="/api/people/addPerson" class="btn btn-primary">Add Person</button>
            <button type="submit" formaction="/api/people/deletePerson" class="btn btn-secondary">Delete person</button>
        </div>
    </div>
</form>